---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const projects: CollectionEntry<"posts">[] = await getCollection("posts", () => true);

function getRepoUrl(title: string): string {
  if (title.includes("Valorant")) {
    return "https://github.com/josedavidcases7/PracticaValorantDIW";
  } else if (title.includes("Selenium")) {
    return "https://github.com/josedavidcases7/PracticaSeleniumBot";
  } else if (title.includes("Minecraft")) {
    return "https://github.com/josedavidcases7/Practica1Tailwind";
  }
  return "https://github.com/josedavidcases7?tab=repositories";
}

function getLiveDemoUrl(title: string): string | null {
  if (title.includes("Valorant")) {
    return "https://josedavidcases7.github.io/PracticaValorantDIW/";
  } else if (title.includes("Minecraft")) {
    return "https://josedavidcases7.github.io/Practica1Tailwind/prueba.html";
  }
  return null;
}
---

<section id="projects" class="py-8">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-center text-3xl md:text-4xl font-semibold mb-10 text-black dark:text-white">
      Proyectos
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(({ data }) => {
        const repoUrl = getRepoUrl(data.title);
        const liveDemoUrl = getLiveDemoUrl(data.title);

        return (
          <div class="bg-white dark:bg-gray-800 text-black dark:text-gray-200 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm transform transition duration-300 hover:scale-105">
            {data.image && (
              <img
                class="rounded-t-lg w-full h-48 object-cover cursor-pointer"
                src={data.image}
                alt={data.title}
              />
            )}
            <div class="p-5">
              <h5 class="mb-2 text-2xl md:text-3xl font-bold tracking-tight cursor-pointer">
                {data.title}
              </h5>
              <p class="mb-3 font-normal md:text-lg cursor-pointer">
                {data.description}
              </p>
              
              {}
              <div class="flex flex-wrap items-center gap-3">
                {}
                <a
                  href={repoUrl}
                  target="_blank"
                  class="inline-flex items-center px-3 py-2 text-sm md:text-base font-medium text-white bg-purple-400 dark:bg-purple-400 rounded-lg hover:bg-purple-500 dark:hover:bg-purple-500 focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 cursor-pointer"
                >
                  Ver en GitHub
                  <svg
                    class="rtl:rotate-180 w-3.5 h-3.5 ml-2"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 14 10"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M1 5h12m0 0L9 1m4 4L9 9"
                    />
                  </svg>
                </a>

                {}
                {liveDemoUrl && (
                  <a
                    href={liveDemoUrl}
                    target="_blank"
                    class="relative inline-flex items-center justify-center p-0.5 text-sm font-medium text-gray-900 dark:text-white rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800"
                  >
                    <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-transparent group-hover:dark:bg-transparent">
                      Live Demo
                    </span>
                  </a>
                )}
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
