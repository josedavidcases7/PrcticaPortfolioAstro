---
import ThemeToggle from "./ThemeToggle.astro";
---

<body class="bg-white dark:bg-black transition-colors duration-300">
  <header
    class="fixed top-0 left-0 right-0 w-full px-6 py-10 z-50 bg-purple-400 dark:bg-black transition-colors duration-300"
  >
    <nav class="max-w-[2000px] mx-auto">
      <div class="flex justify-between items-center">
        <div>
          <a
            href="/"
            class="text-2xl md:text-3xl lg:text-2xl font-bold text-white"
            >Home</a
          >
        </div>

        <div class="flex items-center gap-4">
          <div class="hidden md:flex items-center gap-8">
            <a
              href="#projects"
              class="text-2xl md:text-3xl lg:text-2xl text-white hover:text-purple-200"
              >Proyectos</a
            >
            <a
              href="#contact"
              class="text-2xl md:text-3xl lg:text-2xl text-white hover:text-purple-200"
              >Contacto</a
            >
          </div>

          <ThemeToggle />

          <button
            class="hamburger md:hidden flex flex-col justify-center items-center gap-1.5"
          >
            <span class="w-8 h-1 bg-white rounded-full transition-all"></span>
            <span class="w-8 h-1 bg-white rounded-full transition-all"></span>
            <span class="w-8 h-1 bg-white rounded-full transition-all"></span>
          </button>
        </div>
      </div>

      <div class="mobile-menu hidden md:hidden pt-4">
        <div class="flex flex-col items-center gap-4">
          <a href="#projects" class="text-2xl text-white hover:text-purple-200"
            >Proyectos</a
          >
          <a href="#contact" class="text-2xl text-white hover:text-purple-200"
            >Contacto</a
          >
        </div>
      </div>
    </nav>
  </header>

  <style>
    .hamburger.is-active span:first-child {
      transform: translateY(10px) rotate(45deg);
    }
    .hamburger.is-active span:nth-child(2) {
      opacity: 0;
    }
    .hamburger.is-active span:last-child {
      transform: translateY(-10px) rotate(-45deg);
    }
    .hamburger span {
      transition: all 0.3s ease-in-out;
    }
  </style>

  <script>
    import "../scripts/menu";
  </script>
</body>
